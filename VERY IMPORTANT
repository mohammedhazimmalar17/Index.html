<script>
function grow() {
  document.getElementById("trunk").style.height = "260px";

  setTimeout(() => {
    document.getElementById("branch1").style.height = "90px";
    document.getElementById("branch2").style.height = "90px";
  }, 1200);

  const leaves = document.querySelectorAll(".leaf");
  leaves.forEach((leaf, i) => {
    setTimeout(() => {
      leaf.style.opacity = "1";
      leaf.style.transform = "scale(1.3)";
    }, 2200 + i * 300);
  });

  setTimeout(() => {
    document.getElementById("msg").style.opacity = "1";
  }, 3800);
}
</script>

